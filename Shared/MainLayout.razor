@using ApexLM.Services
@inherits LayoutComponentBase

@implements IDisposable
@inject ILayoutService LayoutService

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudLink Href="/">
            <MudImage Src="/assets/logo_FM.png" Alt="Tanolis logo" Width="50" Height="30" Elevation="25" Class="rounded-lg"/>
        </MudLink>
        <MudText Typo="Typo.h5" Class="ml-1">@PageTitle</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private string PageTitle { get; set; } = "ApexLM";

    protected override void OnInitialized()
    {
        LayoutService.OnTitleChanged += HandleTitleChanged;
    }

    private void HandleTitleChanged(string newTitle)
    {
        PageTitle = newTitle;
        StateHasChanged();
    }

    public void Dispose()
    {
        LayoutService.OnTitleChanged -= HandleTitleChanged;
    }
}
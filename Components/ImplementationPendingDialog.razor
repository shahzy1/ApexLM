@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Primary">Coming Soon</MudText>
    </TitleContent>

    <DialogContent>
        <div class="text-center py-4">
            <MudIcon Icon="@Icons.Material.Filled.Construction"
                     Size="Size.Large"
                     Color="Color.Warning"
                     Class="mb-3" />

            <MudText Typo="Typo.h6" Class="mb-2">@FeatureName</MudText>
            <MudText Typo="Typo.body2" Color="Color.Default">
                This feature is currently under development and will be available in a future update.
            </MudText>
        </div>
    </DialogContent>

</MudDialog>

@code {

    [Parameter]
    public string FeatureName { get; set; } = "Feature";

}